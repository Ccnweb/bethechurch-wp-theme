/* ==================================================== */
/*    TODO PASSER CETTE PARTIE DANS programme/programme.css
/* ==================================================== */

.programme_section h2 {
    font-family: 'Louis George Café';
    font-size: calc(2rem + 1vw);
}

.carre {
    width: 23vw;
    margin: 0.3rem;
    height: 18vw;
}

.carre > .gradient {
    height: 6vw;
    background: linear-gradient(transparent 8%, #000000cc);
}

.carre h4 {
    font-size: 1.5vw;
    text-transform: uppercase;
    color: white;
    font-weight: bold;
}