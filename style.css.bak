.notitle-text-left {
    width: 40vw;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

/* bouton réserver ma place */
.wp-block-button.reserver_place {
    margin-top: auto;
    margin-bottom: 2cm;
}

/* ==================================================== */
/*    TODO PASSER CETTE PARTIE DANS intervenants/intervenants.css
/* ==================================================== */

.intervenant_content {
    /* margin: 2rem; */
}

.intervenant_content > h2 {
    color: black;
    font-size: 3vw;
    line-height: 3vw;
    margin: 1rem;
    font-family: "Louis George Café";
}

.intervenant_content > p {
    font-size: calc(12px + 0.5vw);
    margin: 0.3rem 4rem;
}

.img_intervenant_mobile {
    height: 50vw;
