/* ==================================================== */
/*                   LES POLICES                        */
/* ==================================================== */

@font-face {
    font-family: 'Helvetica Neue';
    src: url('fonts/HelveticaNeue.ttf');
    src: url('fonts/HelveticaNeue.ttf') format('truetype');
    font-style: normal
}

@font-face {
    font-family: 'Louis George Café';
    src: url('fonts/Louis George Cafe.ttf');
    src: url('fonts/Louis George Cafe.ttf') format('truetype');
    font-style: normal
}

@font-face {
    font-family: 'Futura Extra Black BT';
    src: url('fonts/Futura Extra Black.ttf');
    src: url('fonts/Futura Extra Black.ttf') format('truetype');
    font-style: normal
}

/* ==================================================== */
/*                     GLOBAL                           */
/* ==================================================== */

:root {
    --green: #31D2AE;
    --red: #EA5E6B;
}

html, body {
    font-family: 'Helvetica Neue', Roboto;
}

/* bugfix lorsqu'on ajoute onepage-scroll car sinon la page ne scroll pas :( */
/* .page {
    overflow-y: auto;
} */

h2 {
    font-family: "Futura Extra Black BT";
    font-size: 6.5vw;
    line-height: 6vw;
    color: white;
    margin: 0;
}

h2.point::after {
    content: ".";
}

a {text-decoration: none !important}

p {
    font-family: "Louis George Café";
    font-size: 1.5rem;
    line-height: 1.8rem;
    letter-spacing: 2px;
    text-align: justify;
}

/* LES BOUTONS */
div.wp-block-button {margin:0.5rem}

a.wp-block-button__link {
    background: transparent;
    border: 1px solid white;
    padding: 0.5rem 1.5rem;
    margin: 1rem 1rem;
    font-family: 'Helvetica Neue';
    letter-spacing: 3px;
    font-size: 1rem;
    min-width: 200px;
    transition: all 0.2s ease-in;
}

a.wp-block-button__link:hover {
    background: rgba(255, 255, 255, 0.3);
    transition: all 0.2s ease-in;
}

/* ==================================================== */
/*                 HELPFUL CLASSES                      */
/* ==================================================== */

.bg-green, .bg-vert {background: var(--green)}
.bg-red, .bg-rouge {background: var(--red)}

.has-text-color.has-blanc-color {color:white}
.has-text-color.has-noir-color {color:black}
.has-text-color.has-vert-color {color:var(--green)}
.has-text-color.has-rouge-color {color:var(--red)}

.font-cafe {font-family: 'Louis George Café'}

.hollow {
    -webkit-text-stroke: 2px white;
    -webkit-text-fill-color: transparent;
}

/* ==================================================== */
/*                 MENU NAVIGATION                      */
/* ==================================================== */

nav.menu-principal {
    background: white;
}

/* titres des menus */
li.menu-item {
    margin-right: 4vw;
}

a.nav-link {
    font-family: 'Louis George Café';
}


/* ==================================================== */
/*                 LOGO BE THE CHURCH                   */
/* ==================================================== */

a.custom-logo-link {
    position: fixed;
    z-index: 200;
    top: 0.4cm;
    left: 1.4cm;
}

a.custom-logo-link > img {
    width: 3cm;
    height: 3cm;
}

/* ==================================================== */
/*                      SLIDES                          */
/* ==================================================== */

.section {
    min-height: 100vh;
}

.section > div {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
}

.fleche_slide_suivant {
    position: fixed;
    bottom: 3px;
    font-size: 2vw;
    color: white;
    margin-left: 50%;
    cursor: pointer;
    text-shadow: white 0px 1px 2px;
}


